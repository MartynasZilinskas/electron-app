{
    "name": "electron-app",
    "private": true,
    "version": "0.1.0",
    "description": "",
    "main": "main.js",
    "scripts": {
        "test": "npm run test:electron && npm run test:renderer",
        "build": "npm run build:electron && npm run build:renderer",
        "watch": "npm-run-all -p watch:electron watch:renderer",
        "start": "electron . --serve",
        "test:electron": "tsc -p ./electron/ --noEmit && tslint -p ./electron/ --config ./electron/tslint.json",
        "test:renderer": "tsc -p ./renderer/ --noEmit && tslint -p ./renderer/ --config ./renderer/tslint.json",
        "build:electron": "rollup -c ./electron/rollup.config.js",
        "build:renderer": "cd renderer && webpack --config webpack.config.js",
        "watch:electron": "rollup -w -c ./electron/rollup.config.js",
        "watch:renderer": "cd renderer && webpack-dev-server",
        "pack:windows": "electron-builder build --windows nsis --ia32 --x64",
        "pack:linux": "electron-builder electron-builder build --linux",
        "pack:mac": "electron-builder build --mac",
        "release:windows": "npm run pack:windows -- --publish onTagOrDraft always",
        "release:linux": "npm run pack:linux -- --publish onTagOrDraft always",
        "release:mac": "npm run pack:mac -- --publish onTagOrDraft always"
    },
    "keywords": [],
    "author": "MartynasZilinskas",
    "dependencies": {
        "electron-updater": "^2.23.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MartynasZilinskas/electron-app.git"
    },
    "devDependencies": {
        "@simplrjs/webpack": "0.1.0-alpha.2",
        "electron": "^2.0.3",
        "electron-builder": "^20.18.0",
        "electron-reload": "^1.2.5",
        "npm-run-all": "^4.1.3",
        "rollup": "^0.62.0",
        "rollup-plugin-auto-external": "^1.2.0",
        "rollup-plugin-typescript2": "^0.15.1",
        "simplr-tslint": "^1.0.0-alpha.14",
        "tslint": "^5.10.0",
        "tslint-language-service": "^0.9.9",
        "typescript": "^2.9.2",
        "wait-on": "^2.1.0",
        "webpack": "^4.14.0",
        "webpack-cli": "^3.0.8",
        "webpack-dev-server": "^3.1.4"
    }
}
